
@model Review

<div class="container">
    <div class=" row modal modal-dialog-centered">
        <div class="blurModals text-white col-auto mx-auto">
            <div class="panel-body fs-3">
                <form class="m-2" method="post">
                    <div id="firstForm">
                        <div class=" text-center mb-5 ">
                            <h1 class="display-3">Honnan hallott rólunk?</h1>
                        </div>
                        <div class="row ">
                            <div class="col-auto mx-auto">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="radio" name="Heard" id="exampleRadios1" value=1 checked>
                                    <label class="form-check-label" for="exampleRadios1">
                                        Régi ügyfél vagyok (több mint 1 éve ismerem a céget.
                                    </label>
                                </div>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="radio" name="Heard" id="exampleRadios2" value=2>
                                    <label class="form-check-label" for="exampleRadios2">
                                        Új ügyfél vagyok, és ajánlás útján hallottam a cégről.
                                    </label>
                                </div>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="radio" name="Heard" id="exampleRadios3" value=3>
                                    <label class="form-check-label" for="exampleRadios3">
                                        Új ügyfél vagyok, interneten találkoztam a céggel.
                                    </label>
                                </div>
                                <div class="text-center">

                                    <button class="btn btn-outline-light btn-lg mt-3 blurModals" type="button" onclick="showSecond()">
                                        Következő &nbsp; <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="secondForm" style="display:none">
                        <div class="text-center">
                            <h1 class="display-4 mb-4">Fel van iratkozva hírlevelünkre?</h1>
                        </div>
                        <div class="row ">
                            <div class="col-lg-8 col-md-10 mx-auto">
                                <div class="form-check mb-2">
                                    <input onchange="hideEmailDiv()" class="form-check-input" type="radio" name="IsSubscribed" id="Radios1" value=1 checked>
                                    <label class="form-check-label" for="Radios1">
                                        Nem, de szeretnék.
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input onchange="hideEmailDiv()" class="form-check-input" type="radio" name="IsSubscribed" id="Radios2" value=2>
                                    <label class="form-check-label" for="Radios2">
                                        Nem, és nem is szeretnék.
                                    </label>
                                </div>
                                <div class="form-check mb-3">
                                    <input onchange="hideEmailDiv()" class="form-check-input" type="radio" name="IsSubscribed" id="Radios3" value=3>
                                    <label class="form-check-label" for="Radios3">
                                        Igen.
                                    </label>
                                </div>
                                <div class="form-floating text-dark mb-1 fs-6" id="email">
                                    <input type="email" class="form-control" onchange="checkEmail()" id="emailInput" name="Email" placeholder="pelda@gmail.com" />
                                    <label id="emailLabel" for="email">E-mail cím</label>
                                    <div id="emailError" style="background-color:#b6001e; padding:8px; font-size:16px;" class="alert text-white d-none mt-1 text-center">A megadott e-mail cím formátuma nem megfelelő!</div>
                                </div>
                              
                                <div class="text-center">
                                    <button class="btn btn-outline-light btn-lg mt-2 blurModals" onclick="showFirst()" type="button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                        </svg>
                                        &nbsp; Előző
                                    </button>
                                    <button class="btn btn-outline-light btn-lg mt-2 blurModals disabled" id="thirdBtn" onclick="showThird()" type="button">
                                        Következő &nbsp; <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                                        </svg>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="thirdForm" style="display:none">
                        <div class="panel-heading text-center my-3">
                            <h1 class="display-5">Értékelje az adott vásárlását!</h1>
                            <h1 class="display-5">Mennyire elégedett összességében?</h1>
                        </div>
                        <div class="text-center mt-3 ">
                            <p>Elégedettség: <span id="emoji">😀</span></p>
                            <input name="Rating" type="range" min="1" max="4" step="1" value="4" id="range">
                            <p id="value">Nagyon elégedett!</p>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-outline-light btn-lg mt-3 blurModals" onclick="showSecond()" type="button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                </svg>
                                &nbsp; Előző
                            </button>
                            <button class="btn btn-outline-light btn-lg mt-3 blurModals" onclick="showThanks()" type="submit">
                                Válaszok mentése &nbsp;
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z" />
                                </svg>
                            </button>

                        </div>
                    </div>
                    
                </form>
                <div id="thanks" style="display:none">
                    <div class="panel-heading text-center my-3">
                        <h1 class="display-5">Köszönjük szépen, hogy időt szánt ránk</h1>
                        <h1 class="display-5">és kitöltötte az űrlapunkat!</h1>
                        <h1 class="display-5">Várjuk vissza!</h1>
                        <h1 class="display-5">😊</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



