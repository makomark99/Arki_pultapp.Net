<!DOCTYPE html>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PultApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PultApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <script defer type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
</head>
<body>
    <header>
        <nav style="background-color: #b6001e;" class="navbar navbar-expand-sm text-white navbar-toggleable-sm navbar-light border-bottom  border-1 box-shadow m-0 p-0 ">
            <div class="container-fluid">
                <a class="navbar-brand  m-0 p-0" asp-area="" asp-controller="Home" asp-action="Index"> <img id="logo" src="../images/arki_logo.png" alt="logo" /> </a>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-3 flex-grow-1 justify-content-end">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Username") == null)
                        {
                            <li class="nav-item ">
                                <a class=" fs-4 nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Kezdőoldal</a>
                            </li>
                        }
                        <li class="nav-item ms-3">
                            <a class=" fs-4 nav-link text-white" asp-area="" asp-controller="Review" asp-action="Index">Admin felület</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
                        {
                            <li class="nav-item ms-3">
                                <a class=" fs-4 nav-link text-white " asp-area="" asp-controller="Admin" asp-action="SignOut">Kijelentkezés</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer blur ">
        <div class="container align-middle ">
            <span class="text-white fs-5">&copy; 2022 - PultApp - Készítette:</span><img id="ktslogo" src="../images/kts_logo.png" alt="KTS Online" />
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
